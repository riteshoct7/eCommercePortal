@model Dtos.ViewModels.LoginViewModel
<h1 class="text-info">Log in</h1>

<form asp-controller="Account" asp-action="Login" method="post" role="form" asp-route-returnurl="@ViewData["ReturnUrl"]">
    <h4>Use a local account to login in.</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mt-3">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mt-3">
        <div class="col-md-10">
            <div class="custom-checkbox">
                <label asp-for="RememberMe">
                    <input type="checkbox" asp-for="RememberMe" />
                    @Html.DisplayNameFor(m=>m.RememberMe)
                </label>
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success from-control">Log in</button>
        </div>
    </div>
    <p class="mt-3">
        <a asp-action="Register">Register as a new User?</a>
    </p>
    <p class="mt-3">
        <a asp-action="ForgotPassword">Forgot your password?</a>
    </p>

</form>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
 }
}