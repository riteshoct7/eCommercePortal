@model Dtos.ViewModels.EditCountryStateCityViewModel
@{
    Layout = "_AdminLayout";
    var title = "Edit City";
}
<form method="post" action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row p-3 border">
        <input type="hidden" asp-for="UpdateCity.CityId" />
        <input type="hidden" asp-for="UpdateCity.StateId" />
        <input type="hidden" asp-for="UpdateCity.CreatedDate" />
        <input type="hidden" asp-for="UpdateCity.ModifiedDate" />
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.CountryId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m=>m.UpdateCity.CountryId,
                    Model.Countries,"Please Select Country", new {@class="form-control",@id="ddlCountry"})
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row  mt-3">
                <div class="col-4">
                    <label asp-for="UpdateCity.StateId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(x=>x.UpdateCity.StateId,Model.States,
                    new {@class="form-control",@id="ddlState"})
                    <span asp-validation-for="UpdateCity.StateId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row  mt-3">
                <div class="col-4">
                    <label asp-for="UpdateCity.CityName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="UpdateCity.CityName" class="form-control" />
                    <span asp-validation-for="UpdateCity.CityName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="UpdateCity.CityDescription"></label>
                </div>
                <div class="col-8">
                    <input asp-for="UpdateCity.CityDescription" class="form-control" />
                    <span asp-validation-for="UpdateCity.CityDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-8 offset-4">
                    <partial name="_EditAndBackToListButton" model="@Model.UpdateCity.CityId" />
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script type="text/javascript">

    $("#ddlCountry").change(function(){
        var ddlSource ="#ddlCountry";
        GetStatesByCountryId($(ddlSource).val());
    });

    function GetStatesByCountryId(CountryId) {
        var url = '@Url.Content("~/")'+"Admin/City/GetStatesByCountryId";
        $.getJSON(
                    url,
                    {CountryId: CountryId},
                    function(data) {
                            var items = "";
                            $("#ddlState").empty();
                            $.each(data,function(i,state) {
                                items+="<option value='"+state.value+"'>"+state.text+"</option>";
                            });
                            $("#ddlState").html(items);
                    });

     }
</script>
}

