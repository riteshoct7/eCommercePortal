<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />

    @*For JqueryUI*@
    <link rel="stylesheet" href="~/css/jqueryui/jquery-ui.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jqueryui/jquery-ui.theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jqueryui/jquery-ui.structure.css" asp-append-version="true" />
    @*For JqueryUI*@


    @*For Datatables*@
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" />
    @*For Datatables*@

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="ContactUs" asp-action="Index">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Country" asp-action="Index">Countries</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="State" asp-action="Index">States</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="City" asp-action="Index">Cities</a>
                        </li>
                    </ul>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @* <span class="nav-link text-dark">Welcome: @CurrentUser.Name</span>*@
                        </li>
                        <li class="nav-item">
                            @*<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOff">Log Out</a>*@
                            <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff"
                                  asp-area="">
                                <button type="submit" class="btn nav-link">Logout</button>
                            </form>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021
        </div>
    </footer>

    @*For JqueryUI*@
    @*    <script src="~/js/jqueryui/external/jquery/jquery.js" asp-append-version="true"></script>*@
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>*@
    @*For JqueryUI*@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @*For JqueryUI*@
    <script src="~/js/jqueryui/jquery-ui.js" asp-append-version="true"></script>
    @*For JqueryUI*@

    @*For Datatables*@
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    @*For Datatables*@


    @*For Toastr*@
    @*<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>*@
    @*For Toastr*@

    @*For Sweet Alert*@
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @*For Sweet Alert*@

    @*for font awesome*@
    <script src="https://kit.fontawesome.com/291b0f9394.js" crossorigin="anonymous"></script>
    @*for font awesome*@

    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
