@model Dtos.Models.CreateCountryDto
@{
    Layout = "_AdminLayout";
    var title = "Create Country";
}

<form method="post" action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row p-3 border">
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CountryName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CountryName" class="form-control" />
                    <span asp-validation-for="CountryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="CountryDescription"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CountryDescription" class="form-control" />
                    <span asp-validation-for="CountryDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="ISDCode"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ISDCode" class="form-control" />
                    <span asp-validation-for="ISDCode" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-8 offset-4">
                    <partial name="_CreateAndBackToListButton" />
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

