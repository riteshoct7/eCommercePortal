@{
    ViewData["Title"] = "Categories List";
}

<style>
    .text-right {
        text-align: right !important;
    }
</style>
<div class="p-4" style="border-radius:20px;">
    <div class="row">
        <div class="col-6">
            <h1 class="text-primary">Categories List</h1>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Create"><i class="fas fa-plus"></i> &nbsp; Create New Category</a>
        </div>
    </div>
    <br />
    <div class="p-3 border rounded" style="background-color:#cde8e2">
        <table class="table table-stiped table-bordered" style="width:100%;" id="tblCategory">
            <thead class="thead-dark">
                <tr class="table-danger">
                    <th> Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
<script src="~/js/category.js"></script>


}