@model Dtos.Models.UpdateCategoryDto
@{
    Layout = "_AdminLayout";
    var title = "Edit Category";
}

<form method="post" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row p-3 border">

        <input type="hidden" asp-for="CategoryId" />


        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-4">
                    <label asp-for="CategoryDescription"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryDescription" class="form-control" />
                    <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-8 offset-4">
                    <partial name="_EditAndBackToListButton" model="@Model.CategoryId" />
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

